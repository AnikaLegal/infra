### Virtual Host Config

## HTTP Redirects
{% for redirect in domain_redirects %}
# {{ redirect.name }}
server {
    listen 80;
    listen [::]:80;
    server_name {{ redirect.inbound_domain }};
    return 301 {{ redirect.target_url }};
}
{% endfor %}

## Reverse proxy all HTTP requests to application server
{% for endpoint in http_endpoints %}
# Start {{ endpoint.name }}
server {
    listen 80;
    listen [::]:80;
    server_name {{ endpoint.server_name }};
    location / {
        proxy_pass http://127.0.0.1:{{ endpoint.port }};
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect http://127.0.0.1:{{ endpoint.port }} http://{{ endpoint.server_name }};
    }
}
# End {{ endpoint.name }}
{% endfor %}

# Internal streamlit servers
# see https://wellfire.co/learn/nginx-django-x-accel-redirects/
# and https://www.nginx.com/blog/websocket-nginx/
server {
    listen 80;
    listen [::]:80;
    server_name 3.106.55.74; # Hardcoded IPs wooo
    {% for endpoint in http_endpoints %}

    # Streamlit internal proxy endpoint for {{ endpoint.name }}
    location /{{ endpoint.streamlit_path }}/ {
        internal;
        # Path rewrite
        rewrite /{{ endpoint.streamlit_path }}/(.*) /$1  break;
        proxy_redirect http://127.0.0.1:{{ endpoint.streamlit_port }} http://3.106.55.74/{{ endpoint.streamlit_path }}/;
        proxy_pass http://127.0.0.1:{{ endpoint.streamlit_port }};
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Websockets
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    {% endfor %}
}

# 404 random requests
server {
    listen 80 default_server;
    server_name _;
    return 404;
}
